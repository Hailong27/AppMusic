<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="83dp"
    android:backgroundTint="@color/option_color"
    android:background="@drawable/roundstyle"
    android:layout_marginBottom="3dp"
    >
    <LinearLayout
        android:layout_width="85dp"
        android:layout_height="83dp"
        android:lineHeight="83dp"
        android:textSize="21dp"
        android:gravity="center"
        android:textColor="@color/text_color"
        >
        <TextView
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:gravity="center"
            android:textFontWeight="@integer/material_motion_duration_long_1"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:text="1"
            android:id="@+id/stt_song"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="275dp"
        android:layout_height="83dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="11dp"
            android:lineHeight="83dp"
            android:textSize="20dp"
            android:text="Đến cùng tận"
            android:gravity="center_vertical"
            android:textColor="@color/text_color"
            android:textFontWeight="700"
            android:id="@+id/name_song"
            ></TextView>
        <TextView
            android:id="@+id/singer_song"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="11dp"
            android:lineHeight="83dp"
            android:textSize="14dp"
            android:text="Hà Anh Tuấn"
            android:gravity="center_vertical"
            android:textColor="@color/text_color"
            android:textFontWeight="@integer/material_motion_duration_long_1"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="83dp"
        android:lineHeight="83dp"
        android:textSize="21dp"
        android:gravity="center_vertical"
        android:textColor="@color/text_color"
        >
        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@drawable/baseline_do_not_disturb_on_24"
            >
        </ImageView>
    </LinearLayout>
</LinearLayout>